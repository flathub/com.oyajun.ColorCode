{
    "app-id" : "com.oyajun.ColorCode",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "49",
    "sdk" : "org.gnome.Sdk",
    "command" : "color-code",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "color-code",
            "builddir" : true,
            "buildsystem" : "meson",
            "run-tests" : true,
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/oyajun/color-code.git",
                    "tag" : "v0.2.1"
                }
            ]
        }
    ]
}
